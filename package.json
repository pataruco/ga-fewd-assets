  "license": "MIT",
  "devDependencies": {
    "@types/html-webpack-plugin": "^3.2.0",
    "@types/mini-css-extract-plugin": "^0.2.1",
    "@types/optimize-css-assets-webpack-plugin": "^1.3.4",
    "@types/terser-webpack-plugin": "^1.2.1",
    "@types/webpack": "^4.4.32",
    "css-loader": "^3.0.0",
    "favicons-webpack-plugin": "^0.0.9",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.1",
    "mini-css-extract-plugin": "^0.7.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "prettier": "^1.18.2",
    "style-loader": "^0.23.1",
    "svg-url-loader": "^2.3.3",
    "terser-webpack-plugin": "^1.3.0",
    "ts-loader": "^6.0.3",
    "ts-node": "^8.3.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.5.2",
    "webpack": "^4.34.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.2"
  },
  "scripts": {
    "build": "webpack  --config ./config/webpack.config.prod.ts",
    "start:dev": "webpack-dev-server --color --config ./config/webpack.config.dev.ts",
    "lint": "yarn tslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,yml,md}": [
        "./node_modules/.bin/prettier --write"
      ],
      "*.{ts,ts}": [
        "yarn lint"
      ]
    },
    "ignore": [
      "./docs/*.*"
    ]
  },
  "dependencies": {
    "debug": "^2.6.9",
    "normalize.css": "^8.0.1"
  }
}
